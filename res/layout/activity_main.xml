<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <LinearLayout  android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

	    <Button android:id="@+id/mainVedioBtn" android:onClick="mainClick" android:text="视频播放测试"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	
	    <Button android:id="@+id/mainDbBtn" android:onClick="mainClick" android:text="数据库测试"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	    
	    <Button android:id="@+id/mainProviderBtn" android:onClick="mainClick" android:text="ContentProvider测试"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	
	    <Button android:id="@+id/mainSharedPreferencesBtn" android:onClick="mainClick" android:text="SharedPreferences测试"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	    
		<Button android:id="@+id/mainActivityLifeCycleBtn" android:onClick="mainClick" android:text="Acticity生命周期测试"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainListViewBtn" android:onClick="mainClick" android:text="ListView"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainFragmentBtn" android:onClick="mainClick" android:text="Fragment"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainServiceBtn" android:onClick="mainClick" android:text="Service"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainBroadcastBtn" android:onClick="mainClick" android:text="Broadcast"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainNetBtn" android:onClick="mainClick" android:text="网络相关"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainXmlBtn" android:onClick="mainClick" android:text="xml解析"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainIntentBtn" android:onClick="mainClick" android:text="intent"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainLayoutBtn" android:onClick="mainClick" android:text="Layout"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainThreadBtn" android:onClick="mainClick" android:text="线程"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainPngBtn" android:onClick="mainClick" android:text=".9图片"  android:layout_width="match_parent" android:layout_height="wrap_content" />
		
		<Button android:id="@+id/mainFileBtn" android:onClick="mainClick" android:text="文件操作"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	
	</LinearLayout>

</ScrollView>