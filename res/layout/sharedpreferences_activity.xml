<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <EditText android:id="@+id/sharedPreferencesKey" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="key"/>
    
    <EditText android:id="@+id/sharedPreferencesValue" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="value"/>

	<TextView android:id="@+id/sharedPreferencesKeyShow" android:layout_width="match_parent" android:layout_height="wrap_content"/>

	<TextView android:id="@+id/sharedPreferencesValueShow" android:layout_width="match_parent" android:layout_height="wrap_content"/>
			
	<Button android:id="@+id/sharedPreferencesGetBtn" android:onClick="btnClick" android:text="读取数据"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	
	<Button android:id="@+id/sharedPreferencesInsertBtn" android:onClick="btnClick" android:text="插入数据"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	
	<Button android:id="@+id/sharedPreferencesDelBtn" android:onClick="btnClick" android:text="删除"  android:layout_width="match_parent" android:layout_height="wrap_content" />
	
	

</LinearLayout>